---
import { ViewTransitions } from 'astro:transitions';
import { SITE } from '../consts';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
			<meta name="description" content="Портфолио Junior разработчика" />
			<meta name="viewport" content="width=device-width, initial-scale=1.0" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<meta name="generator" content={Astro.generator} />
			<title>{title}</title>
			<ViewTransitions />
	</head>
	<body class="bg-[#1a1b26] text-white min-h-screen flex flex-col">
		<main class="container mx-auto p-4 flex-grow flex items-center justify-center">
			<div class="w-full max-w-6xl">
				<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 auto-rows-auto">
					<slot />
				</div>
			</div>
		</main>
	</body>
</html>

<style is:global>
	@tailwind base;
	@tailwind components;
	@tailwind utilities;

	/* Глобальные стили для карточек */
	.card {
		@apply bg-[#313030] rounded-xl p-4 shadow-lg hover:shadow-xl transition-shadow duration-300;
	}
</style>
