---
import Layout from '../layouts/Layout.astro';
import IntroCard from '../components/IntroCard.astro';
import LastProjectCard from '../components/LastProjectCard.astro';
import OtherProjectCard from '../components/OtherProjectCard.astro';
import LocationCard from '../components/LocationCard.astro';
import GithubActivityCard from '../components/GithubActivityCard.astro';
import NowListeningCard from '../components/NowListeningCard.astro';
import SkillsCard from '../components/SkillsCard.astro';
import GithubStatsCard from '../components/GithubStatsCard.astro';
import TwitterCard from '../components/TwitterCard.astro';
import CodingStatsCard from '../components/CodingStatsCard.astro';

const lastProject = {
    title: "Название проекта",
    description: "Краткое описание проекта",
    image: "/project-image.png",
    technologies: ["React", "Node.js", "MongoDB"]
};

const skills = [
    { name: "HTML", level: 90 },
    { name: "CSS", level: 85 },
    { name: "JavaScript", level: 80 },
    { name: "React", level: 75 },
    { name: "Node.js", level: 70 }
];

const codingStats = [
    { language: "HTML", percentage: 80 },
    { language: "CSS", percentage: 70 },
    { language: "JS", percentage: 60 },
    { language: "React", percentage: 50 },
    { language: "Node", percentage: 40 }
];
---

<Layout title="Full Stack Developer">
    <IntroCard />
    <LastProjectCard project={lastProject} />
    <OtherProjectCard title="Другой проект" image="/another-project.png" />
    <LocationCard />
    <GithubActivityCard />
    <NowListeningCard track="Название трека" artist="Исполнитель" />
    <SkillsCard skills={skills} />
    <GithubStatsCard repositories={20} stars={50} followers={100} />
    <TwitterCard username="your_twitter" />
    <CodingStatsCard stats={codingStats} />
</Layout>