---
// Импортируем иконку наушников из библиотеки lucide-react
import { Headphones } from 'lucide-react';

// Определяем интерфейс для пропсов компонента
interface Props {
    track: string;  // Название трека
    artist: string; // Имя исполнителя
}

// Получаем данные из пропсов
const { track, artist } = Astro.props;
---

<!-- Карточка с информацией о текущем прослушивании -->
<div class="card col-span-2 sm:col-span-1">
    <!-- Заголовок карточки с иконкой наушников -->
    <h2 class="text-lg font-bold text-[#ffd700] mb-2 flex items-center gap-2">
        <Headphones className="w-4 h-4" /> Сейчас слушаю
    </h2>
    <div class="flex items-center">
        <!-- Заглушка для обложки альбома -->
        <div class="w-12 h-12 bg-gray-700 rounded-full mr-3"></div>
        <!-- Информация о треке и исполнителе -->
        <div>
            <p class="text-sm text-gray-300">{track}</p>
            <p class="text-xs text-gray-400">{artist}</p>
        </div>
    </div>
</div>