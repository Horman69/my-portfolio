---
// Импортируем константы сайта
import { SITE } from '../consts';
---

<!-- Карточка с представлением разработчика -->
<div class="card col-span-4 sm:col-span-2 lg:col-span-2 row-span-auto sm:row-span-2">
    <div class="flex flex-col sm:flex-row items-center h-full">
        <!-- Блок с аватаром -->
        <div class="w-1/3 mb-4 sm:mb-0 sm:mr-4">
            <img src="/avatar.png" alt="Аватар разработчика" class="w-full rounded-full" loading="lazy" />
        </div>
        <!-- Блок с приветствием и описанием -->
        <div class="w-2/3 text-center sm:text-left">
            <h1 class="text-xl font-bold text-[#ffd700] mb-2">Привет, я Искендеров Руслан!</h1>
            <p class="text-sm text-gray-300">{SITE.DESCRIPTION}</p>
        </div>
    </div>
</div>