---
// Импортируем иконку GitHub из библиотеки lucide-react
import { Github } from 'lucide-react';
---

<!-- Карточка активности на GitHub -->
<div class="card col-span-4 sm:col-span-2">
    <!-- Заголовок карточки с иконкой GitHub -->
    <h2 class="text-lg font-bold text-[#ffd700] mb-2 flex items-center gap-2">
        <Github className="w-4 h-4" /> GitHub активность
    </h2>
    <!-- Сетка для отображения активности -->
    <div class="grid grid-cols-7 gap-1">
        {/* Создаем 35 ячеек для имитации графика активности GitHub */}
        {Array(35).fill(0).map(() => (
            <div class="w-full pb-[100%] bg-[#ffd700] opacity-30 rounded-sm"></div>
        ))}
    </div>
</div>