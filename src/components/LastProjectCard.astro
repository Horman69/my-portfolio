---
// Интерфейс для объекта проекта
interface Project {
    title: string;        // Название проекта
    description: string;  // Описание проекта
    image: string;        // Путь к изображению проекта
    technologies: string[]; // Массив используемых технологий
}

// Интерфейс для пропсов компонента
interface Props {
    project: Project;     // Объект с данными о проекте
}

// Получаем данные о проекте из пропсов
const { project } = Astro.props;
---

<!-- Карточка последнего проекта -->
<div class="card col-span-4 sm:col-span-2 lg:col-span-2 row-span-auto sm:row-span-2">
    <h2 class="text-lg font-bold text-[#ffd700] mb-2">Последний проект</h2>
    <!-- Изображение проекта -->
    <img src={project.image} alt={project.title} class="w-full h-32 object-cover rounded mb-2" loading="lazy" />
    <!-- Название проекта -->
    <h3 class="font-semibold text-sm mb-1 text-gray-300">{project.title}</h3>
    <!-- Описание проекта -->
    <p class="text-xs mb-2 text-gray-400">{project.description}</p>
    <!-- Список используемых технологий -->
    <div class="flex flex-wrap gap-2">
        {project.technologies.map((tech) => (
            <span class="bg-[#ffd700] text-[#1a1b26] px-2 py-1 rounded text-xs">{tech}</span>
        ))}
    </div>
</div>